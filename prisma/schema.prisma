generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @unique @default(uuid())
  email        String    @unique
  name         String
  password     String
  description  String
  workStatus   String    @default("busy")
  githubLink   String    @default("https://github.com/pogadev18")
  linkedInLink String    @default("https://www.linkedin.com/in/pogadev/")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  Project      Project[]
  Job          Job[]
}

model Project {
  id        String   @unique @default(uuid())
  title     String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  imageUrl  String
}

model Job {
  id          String @unique @default(uuid())
  imageUrl    String
  position    String
  companyName String
  location    String
  startDate   String
  endDate     String
  commitment  String
  description String
  user        User   @relation(fields: [userId], references: [id])
  userId      String
}
